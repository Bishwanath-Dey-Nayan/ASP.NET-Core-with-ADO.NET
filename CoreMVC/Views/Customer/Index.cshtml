@model  IEnumerable<CoreMVC.Models.Customer> 

@{ 
    ViewData["Title"] = "Customer List";
}

<h2>Customer List</h2>

<p>
    <a asp-action="Create">Add new customer</a>
</p>

<table class="table table-bordered table-responsive">
    <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>City</th>
            <th>Country</th>
            <th>Gender</th>
            <th>Mobile No</th>
            <th>Email Address</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
        <tr>
            <td>@Html.DisplayFor(m => item.Name)</td>
            <td>@Html.DisplayFor(m => item.Address)</td>
            <td>@Html.DisplayFor(m => item.City)</td>
            <td>@Html.DisplayFor(m => item.Country)</td>
            <td>@Html.DisplayFor(m => item.Gender)</td>
            <td>@Html.DisplayFor(m => item.Mobile)</td>
            <td>@Html.DisplayFor(m => item.Email)</td>
            <td>
                <a asp-action="" asp-route-id=""></a>
            </td>
        </tr>
        }
    </tbody>
</table>
